
citHeader("To cite package ’FishBaseR’ in publications use:")

if(!exists("meta") || is.null(meta)) meta <- packageDescription("FishBaseR")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)
citEntry(entry="Manual",
title = "FishBaseR: Scraping routines for Fish Base ",
author = personList(as.person("Jorge Cornejo-Donoso"),
as.person("Jorge Cornejo-Donoso"),
year = year,
note = vers,
textVersion =
paste("Cornejo-Donoso, J.,",
"FishBaseR: Scraping routines for Fish Base (",
year,
").